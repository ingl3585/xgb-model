{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(python3:*)",
      "Bash(python test:*)",
      "Bash(rm -rf __pycache__:*)",
      "Bash(cat:*.log)",
      "Bash(grep:*)",
      "Bash(env)",
      "Bash(pip list)",
      "Bash(pip show:*)",
      "WebFetch(domain:xgboost.readthedocs.io)",
      "Bash(rm:*)",
      "WebFetch(domain:ninjatrader.com)"
    ],
    "deny": [
      "Bash(rm -rf /:*)",
      "Bash(sudo:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)"
    ]
  }
}